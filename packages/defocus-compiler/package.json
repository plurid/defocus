{
    "name": "@plurid/defocus-compiler",
    "version": "0.0.0",
    "description": "defocus-compiler",
    "keywords": [
        "defocus",
        "compiler"
    ],
    "author": "Jan Cavel <caveljan@plurid.com> (https://plurid.com)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/defocus"
    },
    "bugs": {
        "email": "feedback@plurid.com",
        "url": "https://github.com/plurid/defocus/issues"
    },
    "publishConfig": {
        "access": "public"
    },
    "homepage": "https://github.com/plurid/defocus/tree/master/packages/defocus-compiler",
    "files": [
        "distribution/"
    ],
    "main": "distribution/index.js",
    "module": "distribution/index.es.js",
    "types": "distribution/index.d.ts",
    "engines": {
        "node": ">=8",
        "npm": ">=6"
    },
    "scripts": {
        "clean": "rm -rf ./distribution",
        "spec": "jest ./source",
        "lint": "eslint ./source --ext .ts,.tsx",
        "start": "yarn clean && rollup -c rollup.config.development.js -w --environment MODE_ENV:local",
        "build.development": "yarn clean && rollup -c rollup.config.development.js --environment MODE_ENV:development",
        "build.production": "yarn clean && rollup -c --environment MODE_ENV:production",
        "build": "yarn clean && yarn lint && yarn spec && yarn build.production",
        "prepublishOnly": "yarn build"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@rollup/plugin-commonjs": "^11.0.2",
        "@rollup/plugin-node-resolve": "^7.1.1",
        "@rollup/plugin-replace": "^2.3.1",
        "@rollup/plugin-url": "^4.0.2",
        "@types/jest": "^25.1.4",
        "@typescript-eslint/eslint-plugin": "^2.25.0",
        "@typescript-eslint/parser": "^2.25.0",
        "eslint": "^6.8.0",
        "jest": "^25.1.0",
        "jest-config": "^25.1.0",
        "rollup": "^2.1.0",
        "rollup-plugin-babel": "^4.4.0",
        "rollup-plugin-babel-minify": "^10.0.0",
        "rollup-plugin-peer-deps-external": "^2.2.2",
        "rollup-plugin-postcss": "^2.5.0",
        "rollup-plugin-typescript2": "^0.26.0",
        "ts-jest": "^25.2.1",
        "ts-node": "^8.8.1",
        "typescript": "^3.8.3"
    }
}
